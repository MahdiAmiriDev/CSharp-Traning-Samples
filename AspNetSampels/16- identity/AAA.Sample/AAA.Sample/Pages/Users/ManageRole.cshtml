@page "{id}"
@model AAA.Sample.Pages.Users.ManageRoleModel
@{
}

<h2>Manage User Role</h2>

<table class="table table-striped table-bordered">
    <tr>
        <td>Name</td>
        <td>@Model.CurentUser.UserName </td>        
    </tr>
    <tr>
        <td>Family</td>
        <td>@Model.CurentUser.Email</td>
    </tr>
</table>
<hr />

<h3 class="text-bg-primary">User Roles</h3>

<form method="post">


<div asp-validation-summary="All" class="Text-danger "></div>
<input type="hidden" value="CurentUser.Id" name="id" />
@foreach(var item in Model.AllRoles){
    <input type="checkbox" name="Roles" checked="@Model.UserRoles.Contains(item.Name)" value="@item.Name" />
    <label>@item.Name</label>
}
<div class="py-2">
    <button type="submit" class="btn btn-primary">Update Roles</button>
    <a asp-page="List" class="btn btn-secondary"></a>
</div>
</form>