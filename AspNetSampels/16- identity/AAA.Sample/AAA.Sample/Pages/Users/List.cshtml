@model AAA.Sample.Pages.Users.ListModel

UsersList
<hr />
<table class="table table-striped table-bordered">
    <tr>
        <td>Id</td>
        <td>UserName</td>
        <td>Email</td>
    </tr>
    @if (Model.users.Count() < 1)
    {
        <tr>
            <td colspan="2">
                thereis no user yet
            </td>
        </tr>
    }
    else
    {
        @foreach (var item in Model.users)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>
                    <a class="btn btn-warining" asp-route-id=@item.Id asp-page="Edit">Edit</a>
                    <a class="btn btn-info" asp-route-id=@item.Id asp-page="ManageRole">ManageRole</a>

                    <form method="post">
                        <input type="hidden" name="id" value="@item.Id"/>
                        <button type="submit" class"btn btn-danger">Remove</button>
                    </form>

                </td>
            </tr>
        }
    }
</table>
